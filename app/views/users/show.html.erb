<section class="my-account-section bg-color-white rbt-section-gap">
<% if current_user == @user %>
<div class="modal fade" id="mailModal" tabindex="-1" role="dialog" aria-labelledby="mailModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="mailModalLabel">Messagerie</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'user_mail' %>
      </div>
    </div>
  </div>
</div>
<% end %>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="row g-5">
        <!-- MAIL -->
        <% if current_user == @user %>
        <%= link_to "#", class: "mail-icon-link", "data-bs-toggle": "modal", "data-bs-target": "#mailModal" do %>
        <img src="/assets/email.svg" class="icon">
        <% end %>
        <% end %>
        <!-- FIN MAIL -->
            <!-- SIDE MENU -->
            <%= render "users/side_menu" %>
            <!-- fin SIDE MENU -->

            <!-- CONTENU -->
            <div class="col-lg-9 col-12">
                <div class="tab-content" id="myaccountContent">
                    
                    <!-- PROFIL Utilisateur-->
                    <div class="tab-pane fade active show" id="profil" role="tabpanel">
                    <%= render "users/user_details" %>
                    </div>
                    <!--  fin PROFIL -->

                    <!-- DEVENIR CREATEUR -->
                    <div class="tab-pane fade" id="creator_send" role="tabpanel">
                    <% if @user.pending == false %>
                      <%= render partial: "users/send_creator" %>
                      <% else %>
                      <p>Votre demande est en cours de traitement</p>
                    <% end %>
                    </div>
                    <!-- fin DEVENIR CREATEUR -->

                    <% if @user.creator %>
                        <!-- CREATED WORKSHOPS -->
                        <div class="tab-pane fade show" id="created_workshops" role="tabpanel">
                          <%= render partial: "workshops/user_created_workshops", locals: {user: @user} %>
                        </div>
                        <!--  fin CREATED WORKSHOPS  -->
                    <% end %>

                    <%if @user.creator %>
                    <!-- WORKSHOPS BROUILLON -->
                    <div class="tab-pane fade show" id="draft_workshops" role="tabpanel">
                    <%= render partial: "workshops/workshops_brouillon", locals: {workshops: @user.workshops.where(brouillon: true)} %>
                    <!-- fin WORKSHOPS BROUILLON -->
                    </div>
                    <% end %>
                    
                    <% if user_signed_in? && current_user == @user %>
                        <!-- WORSHOPS inscriptions -->
                        <div class="tab-pane fade show" id="workshops" role="tabpanel">
                          <%= render partial: "workshops/index", locals: {workshops: @user.workshops} %>
                        </div>
                        <!-- fin WORSHOPS inscriptions -->

                        <!-- ORDERS -->
                        <div class="tab-pane fade show" id="orders" role="tabpanel">
                          <%= render partial: "orders/index", locals: {orders: @user.orders} %>
                        </div>
                        <!-- fin ORDERS -->

                        <!-- AVIS -->
                        <div class="tab-pane fade show" id="reviews" role="tabpanel">
                          <%= render partial: "reviews/index", locals: {reviews: @user.reviews} %>
                        </div>
                        <!-- fin AVIS -->
                    
                    <% end %>
                    
                    <!-- fin CONTENU -->
                </div>
            </div>
            <!-- My Account Tab Content End -->
        </div>

      </div>

    </div>
  </div>
</section>