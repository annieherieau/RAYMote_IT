<%= form_with(model: message) do |form| %>
  <% if message.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(message.errors.count, "erreur") %> :</h2>

      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :sender_id, style: "display: block" %>
    <%= form.number_field :sender_id %>
  </div>

  <div>
    <%= form.label :receiver_id, style: "display: block" %>
    <%= form.number_field :receiver_id %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :read, style: "display: block" %>
    <%= form.check_box :read %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
