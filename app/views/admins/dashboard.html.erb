<div class="container">
  <h1 class="text-center">Tableau de bord administrateur</h1>
  
  <%= render "nav_menu" %>
  
  
  <div class="tab-content" id="myTabContent">
    <!-- UTILISATEURS  -->
    <div class="tab-pane fade" id="users" role="tabpanel" aria-labelledby="users-tab">
      <%= render partial: "users/index", locals: {users: @users} %>
    </div>
    <!-- WORKSHOPS  -->
    <div class="tab-pane fade" id="workshops" role="tabpanel" aria-labelledby="users-tab">
    <%= render partial: "workshops/index", locals: {workshops: @workshops} %>
    </div>
    <!-- fin WORKSHOPS -->
    
    <!-- WORSHOPS en attente de validation -->
    <div class="tab-pane fade show active" id="workshops_to_validate" role="tabpanel" aria-labelledby="pending-workshops-tab">
      <%= render partial: "workshops/index", locals: {workshops: @workshops_to_validate} %> 
    </div>
    <!-- fin WORSHOPS en attente de validation -->

    <!-- TAGS -->
    <div class="tab-pane fade" id="tags" role="tabpanel" aria-labelledby="tags-tab">
      <%= render partial: "tags/index", locals: {tags: @tags} %>
    </div>
     <!-- fin TAGS -->

     <!-- CATEGORIES -->
    <div class="tab-pane fade" id="categories" role="tabpanel" aria-labelledby="categories-tab">
      <%= render partial: "categories/index", locals: {categories: @categories} %>
    </div>
    <!-- fin CATEGORIES -->

    <!-- REVIEWS -->
     <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="categories-tab">
    <%= render partial: "reviews/index", locals: {reviews: @reviews} %>
    </div>
    <!-- fin REVIEWS -->

    <%# MESSAGES %>
    <div class="tab-pane fade" id="messages" role="tabpanel" aria-labelledby="messages-tab">
      <%= render partial: "messages/index", locals: {received_messages: @received_messages} %>
    </div>
    <%# fin MESSAGES %>

    <!-- NOTIFICATIONS -->
    <div class="tab-pane fade" id="notifications" role="tabpanel" aria-labelledby="notifications-tab">
      <%= render partial: "admins/admin_form" %>
    </div>
    <!-- fin NOTIFICATIONS -->
  </div>
</div>
