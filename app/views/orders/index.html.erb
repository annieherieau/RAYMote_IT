
<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>User</th>
      <th>Status</th>
      <th>Total Amount</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.user.name %></td>
        <td><%= display_order_status(order) %></td>
        <td><%= display_order_amount(order) %></td>
        <td><%= link_to 'Details', order_path(order.id), class: 'btn btn-info' %></td>
      </tr>
      <tr>
        <td colspan="5">
          <%= order_details_list(order) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
