<% content_for :title, "Votre commande" %>
<% title = "Détails de la commande" %>
<% subtitle = "Trouvez ici tout les détails de votre commande " %>
<%= render partial: "layouts/banner", locals: {title: title, subtitle: subtitle, icon: false}%>
<div class="d-flex justify-content-center align-items-center ">
    <div class="rbt-contact-form contact-form-style-1 max-width-auto w-50 text-center">


  <p><strong>Numéro de commande :</strong> <%= @order.id %></p>
  <p><strong>Montant total :</strong> <%= display_order_amount(@order) %></p>
  <p><strong>Date de création :</strong> <%= @order.created_at %></p>

  <h2>Articles commandés :</h2>
  <ul class="list-unstyled">
    <% @order.workshops.each do |workshop| %>
      <li><%= link_to workshop.name, workshop_path(workshop) %> - <%= number_to_currency(workshop.price) %></li>
    <% end %>
  </ul>

  <%= link_to 'Retour aux commandes', 'javascript:history.back()', class: 'rbt-btn hover-icon-reverse btn-gradient radius-round' %>
</div>
</div>
