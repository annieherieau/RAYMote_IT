      <%= form_with(model: workshop, class: "needs-validation", novalidate: true) do |form| %>
        <% if workshop.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(workshop.errors.count, "error") %> prohibited this workshop from being saved:</h2>

            <ul>
              <% workshop.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide a name for the workshop.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area :description, class: "form-control", rows: 4, required: true %>
          <div class="invalid-feedback">
            Please provide a description for the workshop.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :start_date, "Start Date", class: "form-label" %>
          <%= form.datetime_field :start_date, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide a start date for the workshop.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :duration, "Duration", class: "form-label" %>
          <%= form.number_field :duration, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide the duration of the workshop.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :price, class: "form-label" %>
          <%= form.number_field :price, class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please provide the price of the workshop.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :tag_id, "tag", class: "form-label" %><br>
          <%= form.collection_select :tag_id, @tags, :id, :name, { include_blank: "Please select" }, class: "form-select", required: true %>
          <div class="invalid-feedback">
            Please select a tag for the workshop.
          </div>
        </div>

        <div class="mb-3">
          <%= form.label :category_id, "Category", class: "form-label" %><br>
          <%= form.collection_select :category_id, @categories, :id, :name, { include_blank: "Please select" }, class: "form-select", required: true %>
          <div class="invalid-feedback">
            Please select a category for the workshop.
          </div>
        </div>
        <div class="mb-3">
        <%= render 'courseitems/form_course_items', form: form %>
        </div>


        <div class="mb-3">
          <%= form.submit "Save", class: "btn btn-primary" %>
          <%= link_to "Back to workshops", workshops_path, class: "btn btn-secondary" %>
        </div>
      <% end %>



