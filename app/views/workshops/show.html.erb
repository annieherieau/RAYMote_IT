<% content_for :title, "Apprendre #{@category.name}" %>
<% content_for :meta_description, "Apprenez #{@category.name} avec nos cours en ligne interactifs. Débutez ou perfectionnez-vous rapidement et efficacement. Commencez dès maintenant !" %>
<%# Bannière  %>
<% title = @workshop.name %>
<% subtitle = @workshop.category.name %>

<%= render partial: "layouts/banner", locals: {title: title, subtitle: subtitle, icon: false}%>

<%= render partial: "workshops/workshop_details", locals: {workshop: @workshop }%>
  


<% if @workshop.start_date %>
<script type="application/ld+json">
<!-- script d'appel méthode pour le schema.org "event_jsonld" -->
      <%= event_jsonld(@workshop) %>
</script>
<% else %>
<script type="application/ld+json">
<!-- script d'appel méthode pour le schema.org "course_jsonld" -->
      <%= course_jsonld(@workshop) %>
</script>
<% end %>