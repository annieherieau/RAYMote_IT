<style>
.star-rating {
  font-size: 24px;
}

.star-rating .star_to_rate {
  cursor: pointer;
  color: #ccc; 
}

.star-rating .star.rated {
  color: #f5a623; 
}
.already_stared{
  color: #f5a623; 
}
</style>

<div class="container">
  <h1 class="mt-4 mb-3">Détails de l'atelier</h1>
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <tbody>
          <tr>
            <th scope="row">Name:</th>
            <td><%= @workshop.name %></td>
          </tr>
          <tr>
            <th scope="row">Description:</th>
            <td><%= @workshop.description %></td>
          </tr>
          <tr>
            <th scope="row">Créateur:</th>
            <td><%= link_to "#{@workshop.creator.firstname} #{@workshop.creator.lastname}", user_path(@workshop.creator) %></td>
          </tr>
          <tr>
            <th scope="row">Date de début :</th>
            <td><%=date_format(@workshop.start_date) %></td>
          </tr>
          <tr>
            <th scope="row">Duration:</th>
            <td><%= @workshop.duration %></td>
          </tr>
          <tr>
            <th scope="row">Price:</th>
            <td><%= @workshop.price %> €</td>
          </tr>
        </tbody>
      </table>
      <% if @workshop.tags.present? && @workshop.tags.any? %>
      <div class="d-flex">
      <% @workshop.tags.each do |tag| %>
        <span class="badge bg-primary m-1">
          <%= link_to tag.name, tag_path(tag), class: "text-white" %>
        </span>
        <%end%>
      <% end %>
    </div>
    </div>

    <div class="col-md-6">
      <!-- Participants à l'atelier -->
      <% if current_user == @workshop.creator %>
        <h3>Participants :</h3>
        <% if @attendances.exists? %>
          <ul>
            <% @attendances.each do |attendance| %>
              <li><%= attendance.user.email %></li>
            <% end %>
          </ul>
        <% else %>
          <p>Aucun participant pour le moment.</p>
        <% end %>
      <% end %>

      <!-- Categories -->
      <h3>Catégories:</h3>
      <% if @category.present? %>
        <div class="categories-container">
          <%= link_to @category.name, category_path(@category)%>
        </div>
      <% else %>
        <p>Cet atelier n'est associé à aucune catégorie.</p>
      <% end %>
    </div>
  </div>

  <!-- Inscription/Désinscription -->
  <div class="mt-4">
    <% if user_signed_in? %>
      <% if current_user == @workshop.creator %>
        <p>Vous ne pouvez pas vous inscrire à votre propre événement.</p>
        <%= link_to "Modifier l'atelier", edit_workshop_path(@workshop), class: "btn btn-secondary" %>
      <% elsif @workshop.attendances.exists?(user: current_user) %>
        <% attendance = @workshop.attendances.find_by(user: current_user) %>
        <% if @workshop.price == 0 %>
          <%= button_to 'Se désinscrire', workshop_attendance_path(@workshop, attendance), method: :delete, class: "btn btn-warning", data: { confirm: 'Êtes-vous sûr de vouloir vous désinscrire ?' } %>
        <% else %>
          <p>Cet événement est payant. Veuillez contacter l'administrateur pour vous désinscrire.</p>
          <%= link_to "Formulaire de contacte", contact_path, class: "btn btn-primary" %>
        <% end %>
      <% else %>
        <% if @workshop.price == 0 %>
          <%= button_to "S'inscrire à l'Atelier", workshop_attendances_path(@workshop), method: :post, class: "btn btn-primary" %>
        <% else %>
          <%= button_to "Payer", new_checkout_create_path(workshop_id: @workshop.id), method: :post, data: { turbo: false }, class: "btn btn-success" %>
        <% end %>
      <% end %>
    <% else %>
      <%= link_to "S'inscrire à l'Atelier", new_user_session_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <!-- Likes -->
  <% if current_user != @workshop.creator %>
    <div class="mt-4">
      <p>Nombre de likes : <%= @workshop.likes.count %></p>
      <% if @workshop.likes.exists?(user: current_user) %>
        <%= button_to 'Déliker', workshop_like_path(@workshop), method: :delete, class: "btn btn-warning" %>
      <% else %>
        <%= button_to 'Liker', workshop_like_path(@workshop), method: :post, class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>
  

   
<!-- Bouton review -->
<div class="container justify-content-center">
  <% if user_signed_in? %>
    <% purchased_workshop = @workshop.attendances.exists?(user: current_user) %>
    <% already_reviewed = @workshop.reviews.exists?(user: current_user) %>
    <% if purchased_workshop && !already_reviewed %>
    <div class="star-rating">
    <% (1..5).each do |rating| %>
      <span class="star star_to_rate" data-rating="<%= rating %>" data-form-url="<%= new_workshop_review_path(@workshop, rating: rating) %>">&#9733;</span>
    <% end %>
  </div>
    <% elsif current_user == @workshop.creator %>
        <p> Vous ne pouvez pas commenter votre propre atelier </p>
    <% elsif already_reviewed %>
        <p>Vous avez déjà noté cet atelier</p>
    <% else %>
        <p> Vous devez acheter l'atelier pour pouvoir le noter </p>
    <% end %>
  <% end %>
</div>

  

  <!-- affichage des reviews -->
  <div class="row justify-content-center mt-4">
    <div class="col-md-8">
      <h3 class="text-center">Avis</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Utilisateur</th>
            <th>Évaluation</th>
            <th>Contenu</th>
          </tr>
        </thead>
        <tbody>
          <% if @workshop.reviews.exists? %>
            <% @workshop.reviews.each do |review| %>
              <tr>
                <td><%= review.user.firstname %> <%= review.user.lastname %></td>
                <td><div class="star-rating">
                <% (1..5).each do |star| %>
                  <% if star <= review.rating %>
                    <span class="star already_stared">&#9733;</span>
                  <% else %>
                    <span class="star empty already_stared">&#9734;</span> 
                  <% end %>
                <% end %>
              </div></td>
                <td><%= review.content %></td>
                <% if current_user == review.user %>
                  <td><%= link_to "Modifier", edit_review_path(review) %></td>
                  <td><%= button_to "Supprimer", review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="3">Aucun avis pour le moment.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Boutons -->
  <div class="text-center mt-4">
    <% if current_user == @workshop.creator %>
      <%= button_to "Destroy this workshop", @workshop, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mr-2" %>
    <% end %>
    <%= link_to "Back to workshops", workshops_path, class: "btn btn-secondary mr-2" %>
  </div>
</div>