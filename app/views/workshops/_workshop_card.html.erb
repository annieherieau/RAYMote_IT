
<!-- Start Single Course -->
<div class="rbt-card variation-01 rbt-hover">
    <div class="rbt-card-img">
          <%= link_to workshop do %>
            <img src="assets/course-01.jpg" alt="Card image">
          <% end %>
            <div class="rbt-badge-3 bg-white">
                <span>-50%</span>
                <span>Off</span>
            </div>
        </a>
    </div>
    <div class="rbt-card-body">
        <div class="rbt-card-top">
            <div class="rbt-review">
                <div class="rating">
                <div class="star-rating">
                <% (1..5).each do |star| %>
                  <% if star <= workshop.average %>
                    <span class="star already_stared">&#9733;</span>
                  <% else %>
                    <span class="star empty already_stared">&#9734;</span> 
                  <% end %>
                <% end %>
                </div>
                </div>
                <span class="rating-count"><%= workshop.likes.count %></span>
            </div>
            <div class="rbt-bookmark-btn">
                <a class="rbt-round-btn" title="Bookmark" href="#"><i class="feather-bookmark"></i></a>
            </div>
        </div>
        <!-- Product name-->
        <h4 class="rbt-card-title"><%= link_to workshop.name, workshop %></a></h4>
        <ul class="rbt-meta">
            <li><i class="feather-users"></i>40 Students</li>
        </ul>
        <!-- Product description-->
        <p class="rbt-card-text"><%= workshop.description %></p>
        <div class="rbt-author-meta mb--20">                  
            <!-- Author information-->
            <div class="rbt-author-info">
                By <a href="profile.html"><%= workshop.creator.firstname %></a> In <span><%= workshop.category.name %></span>
            </div>
        </div>
        <div class="rbt-card-bottom">
            <div class="rbt-price">
                <!-- Product price-->
                <span class="current-price"><%= workshop.price %>€</span>
                <span class="off-price">120€</span>
            </div>
            <!-- Link to the course-details-->
            <div>
                <%= link_to "Voir plus", workshop, class: "rbt-btn-link" %>
                <span class="btn-icon"><i class="fa-solid fa-arrow-right" style="color: dark; font-size: 0.6em;"></i></span>
            </div>
        </div>
    </div>
</div>
<!-- End Single Course -->
