<main class="rbt-main-wrapper">
    <!-- Start Banner Area -->
    <div class="rbt-banner-area rbt-banner-1 bg-color-black" style="background-image: url('<%= asset_path('banner-color.jpg') %>'); background-repeat: no-repeat; background-size: cover;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 pb--120 pt--70">
                    <div class="content">
                        <div class="inner">                       
                            <h1 class="title"> 
                                <span style="color: #0b00d9;">R</span><span style="color: white;">evolutionize</span> <span style="color: #0b00d9;">A</span><span style="color: white;">ll</span> <span style="color: #0b00d9;">Y</span><span style="color: white;">our</span> <span style="color: #0b00d9;">M</span><span style="color: white;">asteries</span>
                            </h1>
                            <p class="text" style="color: #ebebeb;"> 
                                Plongez dans une expérience d'e-learning innovante qui bouleverse les normes établies et propulse<br> votre apprentissage vers de nouveaux sommets. Transformez vos ambitions en réalité en rejoignant <strong><br>la révolution de l'éducation</strong> aujourd'hui.
                            </p>
                            <div class="d-flex align-items-center mt-3">
                                
                                <div class="slider-btn mx-auto">
                                    <a class="rbt-moderbt-btn" href="#">
                                        <span class="moderbt-btn-text" style="color: white;">
                                            Start the revolution now
                                        </span>
                                        <span class="btn-icon"><i class="fa-solid fa-arrow-right" style="color: white;"></i></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Banner Area -->

    <!-- Marge between 2 sections -->
    <div class="mt-5"></div>
    <!-- End of Marge -->

    <!-- Categories Courses -->
    <div class="rbt-categories-area bg-color-white rbt-section-gapBottom">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="section-title text-center">
                                <span class="subtitle bg-primary-opacity">CATÉGORIES POPULAIRES</span>
                                <h2 class="title">Les Catégories Les Plus Polpulaires <br/> Grâce à nos Créateurs Superactifs</h2>
                            </div>
                        </div>
                    </div>

                   
                    <div class="row g-5 mt--20">
                        <!-- Start Category Box Layout  -->
                        <% @top_categories.each do |category| %>
                            <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                                <a class="rbt-cat-box rbt-cat-box-1 text-center" href= "<%= category_path(category) %>">
                                    <div class="inner">
                                        <div class="icons">
                                            <img src="assets/images/category/web-design.png" alt="Icons Images">
                                        </div>
                                        <div class="content">
                                            <h5 class="title">
                                            <%= category.name %>      
                                            </h5>
                                            <div class="read-more-btn">
                                                <span class="rbt-btn-link"> <%= category.workshops.count %> cours</span>
                                                <span class="btn-icon"><i class="fa-solid fa-arrow-right" style="color: dark; font-size: 0.6em;"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        <% end %>
                    </div>
                </div> 
            </div>

            <!-- End Category Box Layout  -->

    <!-- End Categories Courses -->






        <!-- Start Workshops Area -->
        <div class="rbt-course-area bg-color-extra2 rbt-section-gap">
            <div class="container">
                <div class="row mb--60">
                    <div class="col-lg-12">
                        <div class="section-title text-center">
                            <span class="subtitle bg-secondary-opacity">les cours les plus populaires</span>
                            <h2 class="title">Les Tops Cours Sélectionnés<br/> Par La RAYM Community</h2>
                        </div>
                    </div>
                </div>

                <!-- Start Single Course  -->
                <div class="row g-5">
                    <div class="container">
                        <div id="workshops">
                            <div class="row mb-4 justify-content-around">
                                <% @workshops.reverse.take(3).each do |workshop| %>
                                    <% if workshop.status != "passé" %>
                                    <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                                        <%= render partial: "workshops/workshop_card", locals: {workshop: workshop} %>
                                    </div>
                                    <% end %>                                    
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
            </div> 
        </div> 

      <!-- End Workshops Area -->



        <!-- Start Workoshop live Area -->
        <div class="rbt-course-area bg-color-white rbt-section-gap">
            <div class="container">
                <div class="row mb--60">
                    <div class="col-lg-12">
                        <div class="section-title text-center">
                            <span class="subtitle bg-coral-opacity">Les Prochains Ateliers </span>
                            <h2 class="title">En Intéraction Avec Nos Formateurs<br/>Live Streaming</h2>
                        </div>
                    </div>
                </div>


      <!-- Start Call To Action  -->
        <div class="rbt-callto-action-area mt-5">
            <div class="container">
                <div class="row g-5">
                    <div class="col-lg-6">
                        <div class="rbt-callto-action callto-action-default bg-color-white rbt-radius shadow-1">
                            <div class="row align-items-center">
                                <div class="col-lg-12 col-xl-5">
                                    <div class="inner">
                                        <div class="rbt-category mb--20">
                                            <a href="#">Typescript-React</a>
                                        </div>
                                        <h4 class="title mb--15">Les types en React TypeScript</h4>
                                        <p class="mb--15">La clé pour un code plus robuste.</p>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-xl-7">
                                    <div class="video-popup-wrapper mt_lg--10 mt_md--20 mt_sm--20">
                                        <img class="w-100 rbt-radius" src="assets/video-01.jpg" alt="Video Images">
                                        <a class="rbt-btn rounded-player-2 sm-size popup-video position-to-top with-animation" href="https://www.youtube.com/watch?v=nA1Aqp0sPQo">
                                            <span class="play-icon"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-6">
                        <div class="rbt-callto-action callto-action-default bg-color-white rbt-radius shadow-1">
                            <div class="row align-items-center">
                                <div class="col-lg-12 col-xl-5">
                                    <div class="inner">
                                        <div class="rbt-category mb--20">
                                            <a href="#">Python Débutant</a>
                                        </div>
                                        <h4 class="title mb--15">Bases et prérequis</h4>
                                        <p class="mb--15">Dans ce tutoriel sur la programmation python, vous allez apprendre Python à partir de zéro.</p>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-xl-7">
                                    <div class="video-popup-wrapper mt_lg--10 mt_md--20 mt_sm--20">
                                        <img class="w-100 rbt-radius" src="assets/video-01.jpg" alt="Video Images">
                                        <a class="rbt-btn rounded-player-2 sm-size popup-video position-to-top with-animation" href="https://www.youtube.com/watch?v=nA1Aqp0sPQo">
                                            <span class="play-icon"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Call To Action  -->

        <!-- End Workoshop live Area -->


    

        

    </main>


