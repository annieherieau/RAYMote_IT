<div class="tab-pane fade" id="workshops" role="tabpanel">
  <div class="rbt-my-account-inner">
    <h3>Ateliers</h3>
    <% if workshops.any? %>
      <div class="rbt-my-account-table table-responsive text-center">
        <table class="table table-bordered">
          <thead class="thead-light">
            <tr>
              <% if admin_signed_in? %>
                <th>ID</td>
              <% end %>
              <th>Name</th>
              <th scope="col">Description</th>
              <th scope="col">Start Date</th>
              <th scope="col">Actions</th>
              <% if admin_signed_in? %>
                <th>Cr√©ateur</td>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% workshops.each do |workshop| %>
              <tr>
                <%# # Admin %>
                <% if admin_signed_in? %>
                 <td><%=  workshop.id %></td>
                <% end %>
                <td><%= workshop.name %></td>
                <td><%= workshop.description %></td>
                <%# TODO: formater la date %>
                <td><%= workshop.start_date %></td>
                <%# # Boutons Action %>
                <td>
                  <%# # Admin %>
                  <% if admin_signed_in? %>
                    - boutons admin -
                  <% end %>

                  <%# # si le current_user est inscrit %>
                  <% if current_user && workshop.user_ids.include?(current_user.id) %>
                    <%= link_to "Voir", workshop, class: "rbt-btn btn-sm" %>
                  <% end %>
                </td>
                <% if admin_signed_in? %>
                  <th><%= workshop.creator.firstname %> <%= workshop.creator.lastname %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p>Aucun workshops pour le moment.</p>
    <% end %>
  </div>
</div>