<% categories.each do |category| %>
  <%= link_to category_path(category.id), class: "rbt-btn btn-border square w-50 d-flex justify-content-between align-items-center" do %>
    <%= category.name %>
    <span class="rbt-badge-6 bg-primary-opacity my-auto"> <%= category.workshops.count %></span>
  <% end %> 
<% end %>
<div class="mt-2">
  <%= link_to "New category", new_category_path, class: "rbt-btn btn-gradient" %>
</div>
