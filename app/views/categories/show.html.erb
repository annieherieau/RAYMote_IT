<% title = @category.name %>
<% subtitle = "" %>

<%= render partial: "layouts/banner", locals: {title: title, subtitle: subtitle, icon: @category.icon}%>

<div class="container">


  <h3>Ateliers associés :</h3>
  
  <% if  @workshops.any? %>
    <ul>
      <% @workshops.each do |workshop| %>
        <li>
          <%= link_to workshop.name, workshop_path(workshop) %>
          <!-- Plus de détails sur l'atelier si nécessaire -->
        </li>
      <% end %>
    </ul>
  <% else %>
      <p>Aucun atelier trouvé</p>
  <% end %>
  

  <h3>Cours associés :</h3>
  <% if  @courses.any? %>
    <ul>
      <% @courses.each do |course| %>
        <li>
          <%= link_to course.name, workshop_path(course) %>
          <!-- Plus de détails sur l'atelier si nécessaire -->
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>Aucun cours trouvé</p>
  <% end %>
  
</div>