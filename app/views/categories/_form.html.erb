<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "erreur") %> inderdit l'enregistrement :</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, 'Nom' %>
    <%= form.text_field :name, required: true, value:  category.name%>
  </div>

  <div class="mt-5">
    <%= form.label :icon, 'Icone' %>
    <%= form.file_field :icon, value:  category.icon  %>
  </div>

  <button type="submit" class="rbt-btn btn-md btn-gradient hover-icon-reverse w-100 mt-5">
      <span class="icon-reverse-wrapper">
          <span class="btn-text">Enregistrer</span>
      <span class="btn-icon"><i class="fa-solid fa-arrow-right"></i></span>
      <span class="btn-icon"><i class="fa-solid fa-arrow-right"></i></span>
      </span>
  </button>
<% end %>
