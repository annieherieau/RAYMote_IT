<% content_for :title, "Connexion" %>
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="rbt-contact-form contact-form-style-1 max-width-auto w-50">
        <h3 class="title">Connexion <%= devise_fr %></h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "max-width-auto" }) do |f| %>
            <div class="form-group">
               
                <%= f.email_field :email, autofocus: true, autocomplete: "Email", class: "form-control", placeholder: "Email" %>
            </div>
            <div class="form-group">
                
                <%= f.password_field :password, autocomplete: "Mot de passe actuel", class: "form-control", placeholder: "Mot de passe" %>
            </div>
      
            <% if devise_mapping.rememberable? %>
                <div class="row mb--30">
                    <div class="col-lg-6">
                        <div class="rbt-checkbox">
                            <%= f.check_box :remember_me, class: "form-check-input" %>
                            <%= f.label :remember_me, 'Se souvenir de moi', class: "form-check-label" %>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="rbt-lost-password text-end">
                            <%= link_to "Mot de passe perdu?", new_password_path(resource_name), class: "rbt-btn-link" %>
                        </div>
                    </div>
                </div>
            <% end %>

            <div class="form-submit-group">
                <%= f.submit "Se Connecter", class: "rbt-btn btn-md btn-gradient border-0 w-100" %>
            </div>
            <div class="rbt-lost-password text-center mt-3">
                <%= link_to "S'inscrire", new_user_registration_path, class: "rbt-btn-link" %>
            </div>            

        <% end %>
    </div>
</div>

