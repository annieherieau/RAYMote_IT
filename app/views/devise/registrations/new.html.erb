<% content_for :title, "Inscription" %>
<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="rbt-contact-form contact-form-style-1 max-width-auto w-50">
    <h3 class="title">Inscription <%= devise_fr %></h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "max-width-auto"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
      
        <%= f.email_field :email, autocomplete: "email", class: "form-control mb-3 p-4", placeholder: "Email" %>
      </div>

      <div class="form-group">
    
        <%= f.password_field :password, autocomplete: "'Nouveau mot de Passe'", class: "form-control mb-3 p-4", placeholder: "Mot de passe" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "Confirmation du nouveau mot de passe", class: "form-control mb-3 p-4", placeholder: "Confirmation Mot de passe" %>
      </div>

      <div class="actions">
        <%= f.submit "S'inscrire", class: "rbt-btn btn-md btn-gradient border-0 w-100" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>



