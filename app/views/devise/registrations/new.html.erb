<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-group"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-input my-4">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autocomplete: "email", class: "form-control mb-3 p-4", placeholder: "Your email address" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-3 p-4", placeholder: "Set your password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-3 p-4", placeholder: "Retype your password" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-dark btn-lg rounded-1" %>
          </div>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>

